<% f ||= {} %>
<% if f.is_a?ActionView::Helpers::FormBuilder %>
  <%= f.hidden_field :user_id %>

  <div class="form-group">
    <%= f.label :public_name %>
    <div class="row">
      <div class="col-md-3 col-xs-3 col-sm-3">
        <%= f.text_field :public_name, :placeholder => t('placeholders.address_book.address'), :class => 'form-control validate[required]' %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :address %>
    <div class="row">
      <div class="col-md-3 col-xs-3 col-sm-3">
        <%= f.text_field :address, :placeholder => t('placeholders.address_book.address'), :class => 'form-control validate[required]' %>
      </div>
    </div>
  </div>
<% end %>