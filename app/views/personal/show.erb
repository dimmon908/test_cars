<div class="row" style="margin-top: 30px;">

  <div>
    <%= link_to 'address_book', address_book_index_path %>
  </div>


  <%= form_for(resource, :as => resource_name, :url => personal_path(resource)) do |f| %>

    <div class="col-md-8 col-xs-8 col-sm-8 col-md-offset-2 col-sm-offset-2">
      <p class="lead"><span class="icons icons-personal_information"></span><%= t 'forms.user.personal_info' %></p>

      <div class="form-group">
        <%= f.label :first_name %>
        <div class="row">
          <div class="col-md-3 col-xs-3 col-sm-3">
            <%= resource.first_name  %>
            <%= resource.last_name  %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="form-group col-md-6 col-xs-6 col-sm-6">
          <%= f.label :country %>
          <%= resource.country  %>
        </div>
      </div>

      <div class="row">
        <div class="form-group col-md-2 col-xs-2 col-sm-2">
          <%= f.label :zip_code %>
          <%= resource.zip_code  %>
        </div>
      </div>

      <div class="row">
        <div class="form-group col-md-3 col-xs-3 col-sm-3">
          <%= f.label :phone %>
          <%= resource.phone  %>
        </div>
      </div>

      <div class="avatar">
        <%= image_tag resource.profile.photo.url(:medium) %>
        <%= f.file_field :photo %>
        <%= submit_tag 'Upload' %>
      </div>
    </div>

    <div class="clearfix"></div>
    <div class="col-md-12 col-xs-12 col-sm-12">
      <div class="divider row" style="margin: 20px 0;"></div>
    </div>


    <div class="col-md-8 col-xs-8 col-sm-8 col-md-offset-2 col-sm-offset-2">
      <p class="lead"><span class="icons icons-account_information"></span><%= t 'forms.user.account_info' %></p>

      <div class="row">
        <div class="form-group col-md-6 col-xs-6 col-sm-6">
          <%= f.label :email %>
          <%= resource.email  %>
        </div>
      </div>
    </div>

    <div class="clearfix"></div>
    <div class="col-md-12 col-xs-12 col-sm-12">
      <div class="divider row" style="margin: 20px 0;"></div>
    </div>

    <div class="col-md-8 col-xs-8 col-sm-8 col-md-offset-2 col-sm-offset-2">
      <p class="lead"><span class="icons icons-credit_card_information"></span><%= t 'forms.user.credit_info' %></p>

      <div class="row">
        <div class="form-group col-md-4 col-xs-4 col-sm-4">
          <%= f.label :credit_card %>
          <%= resource.credit_card  %>
        </div>
        <div class="form-group col-md-2 col-xs-2 col-sm-2">
          <%= f.label :cvv %>
          <%= resource.cvv  %>
        </div>
      </div>

      <div class="row">
        <div class="form-group col-md-4 col-xs-4 col-sm-4">
          <%= f.label :expiration_date %>
          <%= resource.expiration_date  %>
        </div>


        <!--<div class="form-group col-md-2 col-xs-2 col-sm-2">-->
        <!--<%= f.label :postal_code %>-->
        <!--<%= resource.postal_code  %>-->
        <!--</div>-->
      </div>

      <% if can?(:client_approve, current_user) && !resource.status %>
        <%= link_to t('links.approve'), "/#{resource_name}/approve" %>
      <% end %>
    </div>
  <% end %>
</div>