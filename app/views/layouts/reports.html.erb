<head>
  <%= render 'layouts/admin_head' %>
  <script type="text/javascript">
      //<![CDATA[
      window.currentTab = '<%= @tab.blank? ? controller.action_name : @tab %>';
      //]]>
  </script>
  <% content_for :styles do %>
      <%= stylesheet_link_tag 'tables/FooTable/footable-0.1.css', 'forms/pixelmatrix-uniform/uniform.default.css' %>
  <% end %>

  <% content_for :scripts do %>
      <%= javascript_include_tag  'custom_validators', 'custimize_validator','bootstrap-datepicker' %>
  <% end %>

  <% content_for :footer_scripts do %>
      <%= javascript_include_tag 'tables/FooTable/footable.js', 'admin/tables_responsive', 'tables/TableFilter/picnet.table.filter.min.js',  'forms/pixelmatrix-uniform/jquery.uniform.min.js' %>
  <% end %>

</head>
<body class="document-body">
<div class="container-fluid menu-hidden sidebar-hidden-phone fluid menu-left">
  <div id="wrapper">

    <!-- Sidebar Menu -->
    <div id="menu" class="hidden-print">

      <!-- Brand -->
      <%= link_to '/admin/dashboard', :class => 'appbrand' do %>
          <span class="text-primary"><%= t 'general.project_name' %></span>
      <% end %>

      <!-- Scrollable menu wrapper with Maximum height -->
      <div class="slim-scroll">

        <!-- Menu Toggle Button -->
        <button type="button" class="btn btn-navbar">
          <span class="icon-bar"></span> <span class="icon-bar"></span> <span class="icon-bar"></span>
        </button>
        <!-- // Menu Toggle Button END -->

        <!-- Sidebar Profile -->
				<span class="profile center">
					<%= image_tag(current_user.profile.photo.url(:small), :alt => current_user.full_name, title: current_user.full_name) %>
				</span>
        <!-- // Sidebar Profile END -->

        <!-- Menu -->
        <%= render 'admin/navigation' %>
        <!-- // Menu END -->
      </div>
      <!-- // Scrollable Menu wrapper with Maximum Height END -->

    </div>
    <!-- // Sidebar Menu END -->

    <!-- Content -->
    <div id="content">
      <%= render 'admin/top_menu' %>


      <div id="ajax_container">
        <div class="pull-right innerLR">
          <%= link_to t('admin.reports.daily'), '/admin/reports/daily',  :class => 'btn btn-primary pull-left report_button' %>
          <%= link_to t('admin.reports.future'), '/admin/reports/future', :class => 'btn btn-primary pull-left report_button' %>
          <%= link_to t('admin.reports.driver'), '/admin/reports/driver', :class => 'btn btn-primary pull-left report_button' %>
          <%= link_to t('admin.reports.driver_tips'), '/admin/reports/tips', :class => 'btn btn-primary pull-left report_button' %>
          <%= link_to t('admin.reports.business'), '/admin/reports/business', :class => 'btn btn-primary pull-left report_button' %>
        </div>
        <h1><%= t 'admin.reports_header' %></h1>
        <div class="row innerLR">
          <div class="col-md-12">
            <div class="clearfix innerTB border-top" id="report_container">
                <%= yield %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <%= yield :scripts %>
    <!-- // Content END -->
  </div>
</div>
<%= render 'layouts/admin_footer' %>
</body>
</html>