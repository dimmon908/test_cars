<% content_for :scripts do %>
  <%= javascript_include_tag 'activate' %>
<% end %>


<div class="row" style="margin-top: 30px;">
  <div class="col-md-8 col-md-offset-2 text-center">
    <p class="title"><%= t('top.register.activate_account') %></p>
  </div>
</div>

<div class="row divider" style="margin-top: 30px;"></div>

<div class="row" style="margin-top: 30px;">
  <div class="row" id="activate_success" style="display: none;">
    <p class="title"><%= t('top.activate.success_send') %></p>
  </div>

  <div class="row" id="activate_fail" style="display: none;">
    <p class="title"><%= t('top.activate.fail_send') %></p>
  </div>

  <div class="row">
    <div class="col-md-6 col-md-offset-1">
      <div class="row">
        <div class="col-md-8 col-md-offset-2">
          <p class="subtitle"><%= t('top.register.choose_activate') %></p>
        </div>
      </div>
    </div>
  </div>
  <br/>

  <div class="row">
    <form action="/business/send_activate" method="POST" data-remote="true">
      <%= hidden_field_tag :id, resource.id %>

      <div class="col-md-8 col-md-offset-2">
        <div class="row">
          <%= radio_button_tag :activate,  :sms %>
          <%= label_tag :activate_sms, :sms %>
        </div>
        <div class="row">
          <%= radio_button_tag :activate,  :email, true %>
          <%= label_tag :activate_email, :email %>
        </div>

        <br/>
        <div class="row col-md-12">
          <%= button_tag t('links.send_activate_code'), :role => 'submit', :class => 'btn btn-default'%>
        </div>
      </div>
    </form>
  </div>

  <br/><br/>

  <div class="col-md-8 col-md-offset-2 text-center">
    <div class="row " id="send_code">
      <form action="/business/activate" method="POST">
        <%= hidden_field_tag :id, resource.id %>

        <div class="col-md-8 col-md-offset-2">
          <div class="row">
            <%= label_tag :code, t('user.activate.activate_code') %>
          </div>
        </div>

        <div class="row">
          <%= text_field_tag :code, '',  :class => 'form-control' %>
        </div>

        <br/><br/>

        <div class="row col-md-12">
          <%= button_tag t('links.activate'), :type => 'submit', :class => 'btn btn-default'%>
        </div>
      </form>
    </div>
  </div>

</div>