<% content_for :styles do %>
  <%= stylesheet_link_tag 'forms/pixelmatrix-uniform/uniform.default.css' %>
<% end %>
<% content_for :footer_scripts do %>
  <%= javascript_include_tag 'forms/pixelmatrix-uniform/jquery.uniform.min.js' %>
<% end %>

<%
   user ||= Classes::AdminAccount.new
%>

<div id="login">
  <div class="container">
    <div class="wrapper">

      <h1 class="glyphicons lock"><%= t 'general.project_name' %> <i></i></h1>

      <div class="widget widget-heading-simple widget-body-gray">
        <div class="widget-body">
          <%= form_for(user, :as => 'user', :url => '/admin/login', html: {:class => 'row'}) do |f| %>
            <%= push_errors %>
            <%= f.label :email, t('admin.form.label.email_or_phone') %>
            <%= f.text_field :email, :autofocus => true, :placeholder => t(:login_placeholder), :class => 'input-block-level form-control' %>

            <%= f.label :password, t('admin.form.label.password') %>
            <%= f.password_field :password, :placeholder => t(:password_placeholder), :class => 'input-block-level form-control margin-none' %>
            <div class="separator bottom"></div>

            <div class="col-md-8 padding-none ">
              <div class="uniformjs innerL">
                <%= f.label :remember_me, :class => 'checkbox' do %>
                  <%= f.check_box :remember_me %><%= t 'admin.form.label.remember_me' %>
                <% end %>

                <%= link_to t(:forget_password), '/admin/password/new', :class => 'forgot_link' %>
              </div>
            </div>
            <div class="col-md-4 pull-right padding-none">
              <%= f.submit t('button.sign_in'), :class => 'btn btn-block btn-inverse' %>
            </div>
          <% end %>
        </div>
        <div class="widget-footer">
          <p class="glyphicons restart"><i></i><%= t 'admin.form.text.enter_your_email_and_password' %></p>
        </div>
      </div>
    </div>

  </div>

</div>