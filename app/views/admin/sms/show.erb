<div class="row">
  <%= form_for(resource, :as => resource_name, :url => admin_email_path(resource), :validate => true) do |f| %>
    <div class="col-xs-12">
      <p class="lead"><%= t 'forms.sms.info' %></p>

      <div class="row">
        <div class="col-xs-3">
          <%= f.label :internal_name %>
        </div>
        <div class="col-xs-3">
          <%= f.label :title %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-xs-3">
          <%= resource.internal_name %>
        </div>
        <div class="col-xs-3">
          <%= resource.title %>
        </div>
      </div>

      <div class="row">
        <div class="col-xs-12">
          <%= f.label :body_template %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-xs-12">
          <pre>
            <%= resource.template.html_safe %>
          </pre>
        </div>
      </div>

      <div class="row">
        <div class="col-xs-12">
          <%= f.label :desc %>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-12">
          <pre>
            <%= resource.desc.html_safe %>
          </pre>
        </div>
      </div>
    </div>
  <% end %>
</div>