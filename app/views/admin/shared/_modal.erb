<%
   text ||= :test
   label ||= :test_label
   id ||= :test_id
   content ||= :modalContent
   buttons = true if buttons.nil?

%>
<div class="modal fade" id="<%=id%>" tabindex="-1" role="dialog" aria-labelledby="<%=label%>>" aria-hidden="true">
  <div class="modal-dialog admin-modal">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
        <h3 id="<%=label%>"><%= text %></h3>
      </div>
      <div class="modal-errors"></div>
      <div class="modal-body"></div>
      <% if buttons %>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary submitForm"><%= text %></button>
        <button type="button" class="btn btn-primary resetForm"><%= t('admin.general.reset') %></button>
      </div>
      <% end %>
    </div>
  </div>
</div>