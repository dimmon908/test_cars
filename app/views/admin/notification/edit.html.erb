<% content_for :scripts do %>
  <script type="text/javascript">
    //<![CDATA[
    window.resource_name = '<%= resource_name %>';
    //]]>
  </script>
  <%= javascript_include_tag  'regex-mask-plugin', :profile_page, 'custom_validators', 'custimize_validator' %>
<% end %>

<div class="row" style="margin-top: 30px;">
  <div class="col-md-11 col-sm-11 col-xs-11">
    <%= form_for(resource, :as => resource_name, :url => admin_notification_path(resource),  :validate => true) do |f| %>
      <p class="lead"><%= t 'forms.email.info' %></p>

      <div class="form-group">
        <%= f.label :internal_name %>
        <div class="row">
          <div class="col-md-6 col-xs-6 col-sm-6">
            <%= f.text_field :internal_name, :class => 'form-control' %>
          </div>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :title %>
        <div class="row">
          <div class="col-md-6 col-xs-6 col-sm-6">
            <%= f.text_field :title, :class => 'form-control' %>
          </div>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :template %>
        <div class="row">
          <div class="col-md-6 col-xs-6 col-sm-6">
            <%= f.text_area :template, :class => 'form-control' %>
          </div>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :desc %>
        <div class="row">
          <div class="col-md-6 col-xs-6 col-sm-6">
            <%= f.text_area :desc, :class => 'form-control' %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-md-6 col-xs-6 col-sm-6">
          <%= f.submit t('button.update'), :class => 'btn btn-lg btn-primary btn-block' %>
        </div>
      </div>
    <% end %>
    <%= render 'shared/back_link' %>
  </div>
</div>