<div class="row" style="margin-top: 30px;">
    <%= form_for(resource, :as => resource_name, :url => admin_notification_path(resource),  :validate => true) do |f| %>
    <div class="col-xs-12">
      <p class="lead"><%= t 'forms.notification.info' %></p>

      <div class="row">
        <div class="col-xs-6">
          <%= f.label :internal_name %>
        </div>
        <div class="col-xs-6">
          <%= f.label :title %>
        </div>
      </div>
      <div class="row form-group">
        <div class="col-xs-6">
          <%= f.text_field :internal_name, :class => 'form-control', :disabled => :disabled %>
        </div>
        <div class="col-xs-6">
          <%= f.text_field :title, :class => 'form-control' %>
        </div>
      </div>

      <div class="row">
        <div class="col-xs-6">
          <%= f.label :template %>
        </div>
      </div>
      <div class="row form-group">
        <div class="col-xs-12">
          <%= f.text_area :template, :class => 'form-control' %>
        </div>
      </div>

      <div class="row">
        <div class="col-xs-6">
          <%= f.label :desc %>
        </div>
      </div>
      <div class="row form-group">
        <div class="col-xs-12">
          <%= f.text_area :desc, :class => 'form-control' %>
        </div>
      </div>

      <div class="row">
        <div class="col-xs-6">
          <%= f.submit t('button.update'), :class => 'btn btn-lg btn-primary btn-block' %>
        </div>
      </div>
    </div>
    <% end %>
</div>