<% content_for :scripts do %>
  <%= javascript_include_tag  'custom_validators', 'custimize_validator' %>
<% end %>

<div class="row" style="margin-top: 30px;">
  <div class="col-md-8 col-xs-8 col-sm-8 col-md-offset-2 col-sm-offset-2">
    <%= form_for(resource, :as => resource_name, :url => '/admin/request/reason/',  :validate => true) do |f| %>
        <%= error_messages! %>
      <p class="lead"><%= t 'forms.request.cancel_reason.header' %></p>

      <div class="form-group">
        <%= f.label :reason %>
        <div class="row">
          <div class="col-md-6 col-xs-6 col-sm-6">
            <%= f.text_field :reason, :autofocus => true, :class => 'form-control validate[required]' %>
          </div>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :comment %>
        <div class="row">
          <div class="col-md-6 col-xs-6 col-sm-6">
            <%= f.text_area :comment, :class => 'form-control validate[required]' %>
          </div>
        </div>
      </div>

      <div class="col-md-4 col-xs-4 col-sm-4 col-md-offset-2 col-sm-offset-2">
        <%= f.submit t('button.create'), :class => 'btn btn-lg btn-primary btn-block' %>
      </div>
    <% end %>
    <br/><br/>
    <%= render 'shared/back_link' %>
  </div>
</div>