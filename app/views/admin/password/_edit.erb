<% content_for :styles do %>
  <%= stylesheet_link_tag 'forms/pixelmatrix-uniform/uniform.default.css' %>
<% end %>
<% content_for :footer_scripts do %>
  <%= javascript_include_tag 'forms/pixelmatrix-uniform/jquery.uniform.min.js' %>
<% end %>

<div id="login">
  <div class="container">
    <div class="wrapper">

      <h1 class="glyphicons lock"><%= t 'general.project_name' %> <i></i></h1>

      <div class="widget widget-heading-simple widget-body-gray">
        <div class="widget-body">
          <p><%= t(:change_password) %></p>

          <%= form_for(resource, :as => 'user', :url => password_path(resource_name), html: {:class => 'row', :method => :put}) do |f| %>
            <%= devise_error_messages! %>
            <%= push_errors %>
            <%= f.hidden_field :reset_password_token %>

            <%= f.label :password, t(:new_password)  %>
            <%= f.password_field :password, :autofocus => true, :placeholder => t(:password_placeholder), :class => 'input-block-level form-control' %>

            <div class="separator bottom"></div>

            <div class="col-md-8 pull-right padding-none">
              <%= f.submit t(:change_password_submit), :class => 'btn btn-block btn-inverse' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>

  </div>

</div>